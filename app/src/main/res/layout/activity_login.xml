<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jumbomob.invistoo.ui.LoginActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        app:cardCornerRadius="2dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_white_1000"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <EditText
                android:id="@+id/email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/ic_person"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/text_normal" />

            <EditText
                android:id="@+id/new_password_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@drawable/ic_password"
                android:hint="password"
                android:inputType="textPassword"
                android:textSize="@dimen/text_normal" />

            <CheckBox
                android:id="@+id/remember_me_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Lembre-se de mim"
                android:textColor="@color/material_grey_700"
                android:textSize="@dimen/text_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Não é cadastrado ainda?"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/new_user_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Criar uma nova conta"
                android:textColor="@color/material_blue_700"
                android:textSize="@dimen/text_small" />


            <com.jumbomob.invistoo.ui.component.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/login_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_nav_right"
                app:civ_border_color="@color/material_grey_700"
                app:civ_border_width="1dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
