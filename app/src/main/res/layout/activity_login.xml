<RelativeLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_white_1000">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="50dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_white_1000"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.jumbomob.invistoo.ui.LoginActivity">

            <com.jumbomob.invistoo.ui.component.CircleImageView
                android:id="@+id/new_profile_image"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_user"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="1dp"/>

            <EditText
                android:id="@+id/email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email"
                android:text="maiko@email.com"
                android:textSize="@dimen/text_medium"/>

            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="password"
                android:text="maiko"
                android:textSize="@dimen/text_medium"/>

            <CheckBox
                android:id="@+id/remember_me_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Lembre-se de mim"
                android:textColor="@color/material_grey_700"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Não é cadastrado ainda?"/>

            <TextView
                android:id="@+id/new_user_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Criar uma nova conta"
                android:textColor="@color/material_blue_700"/>


            <com.jumbomob.invistoo.ui.component.CircleImageView
                android:id="@+id/login_button"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_nav_right"
                app:civ_border_color="@color/material_grey_700"
                app:civ_border_width="1dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
