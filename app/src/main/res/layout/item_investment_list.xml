<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_small_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/margin_small1"
    android:layout_marginTop="@dimen/activity_horizontal_small_margin">


    <LinearLayout
        android:id="@+id/investment_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:textStyle="bold">

        <LinearLayout
            android:id="@+id/circle_container"
            android:layout_width="@dimen/circle_view"
            android:layout_height="@dimen/circle_view"
            android:background="@drawable/solid_circle_bg"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/abbreviation_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TP"
                android:textColor="@color/material_white_1000"
                android:textSize="@dimen/text_medium_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/year_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2018"
                android:textColor="@color/material_white_1000"
                android:textSize="9sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small1"
            android:text="COMPRA"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TableLayout
        android:id="@+id/info_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small1"
        android:layout_toRightOf="@id/investment_summary"
        android:shrinkColumns="0">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/margin_small4"
                android:layout_marginRight="@dimen/margin_small4"
                android:layout_weight="1.5"
                android:text="@string/title"
                android:textAlignment="textEnd"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_weight="8.5"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/margin_small4"
                android:layout_marginRight="@dimen/margin_small4"
                android:layout_weight="1.5"
                android:text="@string/value"
                android:textAlignment="textEnd"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/value_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8.5" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/margin_small4"
                android:layout_marginRight="@dimen/margin_small4"
                android:layout_weight="1.5"
                android:text="@string/date"
                android:textAlignment="textEnd"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/last_update_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8.5" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/context_menu_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_menu" />

</RelativeLayout>