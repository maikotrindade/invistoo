<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_adapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_small_margin"
    android:layout_marginLeft="@dimen/margin_small4"
    android:layout_marginRight="@dimen/margin_small4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_small_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_small_margin"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_small1"
            app:cardBackgroundColor="@color/material_grey_500"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/question_group_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_small0"
                android:paddingLeft="@dimen/margin_small4"
                android:paddingRight="@dimen/margin_small4"
                android:paddingTop="@dimen/margin_small0"
                android:text="Grupo"
                android:textColor="@android:color/white" />
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/question_text_view"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_small1"
            android:layout_marginBottom="@dimen/margin_small3"
            android:layout_height="wrap_content" />
    </LinearLayout>


</android.support.v7.widget.CardView>