<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_small_margin"
    android:layout_marginRight="@dimen/activity_horizontal_small_margin"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/licenses_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="right|center_vertical">

        <TextView
            android:id="@+id/ok_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_medium1"
            android:padding="@dimen/margin_small4"
            android:text="@string/OK"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_medium1"
            android:typeface="monospace" />

    </LinearLayout>

</RelativeLayout>